<h1>Listado de Libros</h1>
<div class="row">
  {{#each projects}}
    <div class="col s12">
      <div class="card teal darken-4">
        <div class="card-content teal-text text-lighten-5">
          <span class="card-title">{{Autor}}</span>
          <p>{{Categoria}}</p>
          <p>{{ISBN}}</p>
          <p>{{Existencias}}</p>
          <p>{{Descripcion}}</p>          
        </div>
        <div class="card-action">
          <a href="/project/edit/{{_id}}">
            <i class="material-icons" 
              style = "display: inline-flex; vertical-align: sub;">edit</i>
            <span >Editar</span>
          </a>
          <a href="#" class="inline">
            <i class="material-icons" 
            style = "display: inline-flex; vertical-align: sub;">
            delete</i>
            Borrar
          </a>
        </div>
      </div>
    </div>
  {{else}}
    <p>No hay Libros Para Mostrar</p>
  {{/each}}
</div>